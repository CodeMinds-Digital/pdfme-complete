{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/esm",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/index.browser.ts"
  ]
}